<div class="container">
    <div class="row">

        <div class="col-lg-12">

        </div>


        <div class="col-lg-6 align-content-center">
            <form method="post" asp-controller="Profiles" asp-action="CreateProfile">
                <div class="form-group">
                    <label> Name : </label>
                    <input class="form-control" name="Name" id="Name" />
                </div>

                <div class="form-group">
                    <label> Bio : </label>
                    <textarea name="Bio" id="Bio" class="form-control"></textarea>
                </div>

                @* Image Form *@

                <div class="form-group">
                    <img class="img-Profile" id="dd"  src="https://www.kindpng.com/picc/m/24-248253_user-profile-default-image-png-clipart-png-download.png" />

                    <button type="button" class="btn btn-outline-primary" id="ci">
                        Choose Image

                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                            <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                        </svg>
                    </button>

                    <input type="file" id="f" style="display:none;" name="Photo" />
                    <input type="submit" value="save" class="btn btn-success btn_save_profile" id="Sender" />
                </div>
            </form>
        </div>
        <div class="col-lg-12">

        </div>
    </div>
</div>

@section Scripts{ 
<script>

    $("#ci").on("click", function () {
        document.getElementById("f").click();
    });

    $("#f").on("change", function () {
        var src = document.getElementById('f');
        var target = document.getElementById('dd');

        var fr = new FileReader();
        fr.readAsDataURL(src.files[0]);
        fr.onload = function (e) {
            target.src = this.result;
        }
    });

    $("#Sender").on("click", function () {
        var n = document.getElementById('Name');
        if (n.value.replace(' ', '') == '') {
            n.classList.add("inputError");
            return false;
        }
    });

    $("#Name").on("input", function () {
        var n = document.getElementById('Name');
        if (n.value.replace(' ', '') != '') {
            n.classList.remove("inputError");
            return false;
        }
    });

</script>
}